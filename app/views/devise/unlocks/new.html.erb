<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: 'form-horizontal user') do |f| %>
  <%= devise_error_messages! %>

  <div class="col-lg-4">
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit 'Resend unlock instructions', class: 'btn btn-primary margin-top' %>
    </div>
  </div>
<% end %>

<div class="col-lg-12">
  <%= render "devise/shared/links" %>
</div>