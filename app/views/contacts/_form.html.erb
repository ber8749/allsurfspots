<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-4">
    <div class="control-group margin-bottom">
      <%= f.label :name, class: 'control-label'  %><br>
      <div class="controls"><%= f.text_field :name, class: 'form-control' %></div>
    </div>
    <div class="control-group margin-bottom">
      <%= f.label 'Email*', class: 'control-label'  %><br>
      <div class="controls"><%= f.text_field :email, class: 'form-control' %></div>
    </div>
    <div class="control-group margin-bottom">
      <%= f.label :message, class: 'control-label'  %><br>
      <div class="controls"><%= f.text_area :message, class: 'form-control' %></div>
    </div>
    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
